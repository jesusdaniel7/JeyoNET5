@model JeyoNET5.Models.Egreso

@{
    ViewData["Title"] = "Create";
}

<h1>Nevo egreso</h1>

<h4>Dar de alta a @ViewBag.paciente.Nombre @ViewBag.paciente.Apellido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaEgreso" class="control-label"></label>
                <input asp-for="FechaEgreso" class="form-control" />
                <span asp-validation-for="FechaEgreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEgresoId" class="control-label"></label>
                <select asp-for="TipoEgresoId" class ="form-control" asp-items="ViewBag.TipoEgresoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PacienteId" class="control-label"></label>
                <input asp-for="PacienteId" class="form-control" value="@ViewBag.id"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Dar de alta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
