@model JeyoNET5.Models.Ingreso

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles.</h1>


<div>
    <h4>Ingreso correspondiente al paciente @Model.Paciente.Nombre @Model.Paciente.Apellido </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoIngreso.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidad.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
        <dt class="col-sm-2">
            Monto Total:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.count

        </dd>
    </dl>
</div>

<div>
    <h4>Listado de los servicios adquiridos</h4>

    @foreach (var item in Model.Servicios)
    {
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @item.Nombre
                </dt>
                <dd class="col-sm-10">
                    @item.Monto
                </dd>
            </dl>
        </div>
    }
</div>


<div>
    @if (Model.estado == false)
    {
        <h6 class="d-inline-block">Este paciente ha sido egresado, solicite la factura aqui. </h6>
        <a class="d-inline-block" asp-controller="Facturas" asp-action="Create" asp-route-id="@Model.IngresoId">Generar</a> 
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IngresoId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-controller="Servicios" asp-action="Create" asp-route-id="@Model.IngresoId">Agregar servicio</a>
</div>
